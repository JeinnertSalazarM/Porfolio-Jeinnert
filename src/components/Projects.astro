---
import Astroicon from "../icons/Astroicon.astro";
import Boostrap from "../icons/Boostrap.astro";
import CSS from "../icons/CSS.astro";
import Django from "../icons/Django.astro";
import Html from "../icons/Html.astro";
import JavaScript from "../icons/JavaScript.astro";
import Mysql from "../icons/Mysql.astro";
import Tailwind from "../icons/Tailwind.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-orange-500 text-white",
    icon: Html,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "bg-purple-500 text-white",
    icon: Boostrap,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 text-white",
    icon: CSS,
  },
  TailwindCSS: {
    name: "TailwindCSS",
    class: "bg-blue-400 text-white",
    icon: Tailwind,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-yellow-500 text-white",
    icon: JavaScript,
  },
  Django: {
    name: "Django",
    class: "bg-green-400 text-white",
    icon: Django,
  },
  Mysql: {
    name: "MySQL",
    class: "bg-blue-400 text-white",
    icon: Mysql,
  },
  Astro: {
    name: "Astro",
    class: "bg-purple-600 text-white",
    icon: Astroicon,
  },
};

const PROJECTS = [
  {
    title: "Gestor de Proyectos",
    description:
      "Aplicación web desarrollada con Django para organizar y gestionar proyectos de manera eficiente. Permite crear, supervisar y visualizar el progreso de proyectos en tiempo real, con una interfaz intuitiva y responsive diseñada con Bootstrap. Ideal para equipos que buscan simplicidad y control en sus procesos.",
    link: "#",
    github: "#",
    image: "/projects/gestorproyectos.webp",
    tags: [
      TAGS.HTML,
      TAGS.CSS,
      TAGS.JavaScript,
      TAGS.Bootstrap,
      TAGS.Django,
      TAGS.Mysql,
    ],
  },
];
---

{
  PROJECTS.map(({ title, description, image, tags }) => (
    <article>
      <h3 class="mx-3 mb-3 font-semibold text-green-300 text-2xl">{title}</h3>
      <p class="opacity-80 m-3 mb-4 text-white text-lg text-pretty">
        {description}
      </p>
      <ul class="flex flex-row flex-wrap justify-center gap-2 mb-4">
        {tags.map((tag) => (
          <li>
            <span
              class={`  opacity-80 flex items-center flex-row gap-2 p-2 px-2 rounded-full text-xs ${tag.class}`}
            >
              <tag.icon />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="shadow-2xl shadow-white/10 rounded"
        src={image}
        alt={`Captura de pantalla del Proyecto ${image}`}
      />
    </article>
  ))
}
