---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Case from "../icons/Case.astro";
import Code from "../icons/Code.astro";
import Github from "../icons/Github.astro";
import Linkedin from "../icons/Linkedin.astro";
import Mail from "../icons/Mail.astro";
import Tools from "../icons/Tools.astro";
import Whastapp from "../icons/Whastapp.astro";

import Layout from "../layouts/Layout.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <main class="px-3">
    <section class="mx-auto py-44 pb-20 w-full lg:w-[740px]">
      <div class="flex justify-start items-center gap-x-10 mx-3 pb-6 lg:pb-10">
        <img
          class="border-4 border-green-600 rounded-full lg:h-32 lg:size-32 size-28"
          src="https://avatars.githubusercontent.com/u/178427539?v=4"
          alt="Jeinnert Salazar Foto"
        />
        <div class="">
          <Badge>Disponible para trabajar </Badge>
        </div>
      </div>
      <h1
        class="flex flex-row gap-5 sm:gap-1 ml-3 pb-6 lg:pb-10 font-bold text-3xl text-white md:text-3xl lg:text-5xl"
      >
        Hey, Soy Jeinnert

        <h2 class="opacity-80 mx-3 max-w-[700px] text-white text-wrap text-xl">
          <span class="opacity-80 text-green-300">Desarrollador Fullstack</span>
          de Colombia, apasionado por la creación de aplicaciones y soluciones innovadoras
          que combinan diseño intuitivo y funcionalidad robusta. <span
            class="opacity-80 text-green-300">Especializado</span
          > en tecnologías modernas y <span class="opacity-80 text-green-300"
            >comprometido</span
          > con el desarrollo de productos de alta calidad que resuelvan problemas
          reales.
        </h2>

        <nav
          class="flex flex-wrap justify-center gap-4 opacity-80 mt-8 text-white"
        >
          <a
            class="flex justify-center items-center gap-x-4 border-white/10 hover:bg-green-300 mt-4 px-2 lg:px-4 lg:py-2 p-1 border rounded-full text-xs lg:text-base hover:text-black transition-transform hover:scale-110"
            href="https://www.linkedin.com/in/jeinnert-steve-salazar-medina-039917222/"
            ><Linkedin>LinkedIn</Linkedin>
          </a>
          <a
            class="flex justify-center items-center gap-x-4 border-white/10 hover:bg-green-300 mt-4 px-2 lg:px-4 lg:py-2 p-1 border rounded-full text-xs lg:text-base hover:text-black transition-transform hover:scale-110"
            href="https://github.com/JeinnertSalazarM"
            ><Github>GitHub</Github></a
          >
          <a
            class="flex justify-center items-center gap-x-4 border-white/10 hover:bg-green-300 mt-4 px-2 lg:px-4 lg:py-2 p-1 border rounded-full text-xs lg:text-base hover:text-black transition-transform hover:scale-110"
            href="https://wa.me/573156275686?text=Hola%20vi%20tu%20portafolio%20y%20me%20gustaría%20trabajar%20contigo
"
            ><Whastapp>WhatsApp</Whastapp>
          </a>
          <a
            class="flex justify-center items-center gap-x-4 border-white/10 hover:bg-green-300 mt-4 px-2 lg:px-4 lg:py-2 p-1 border rounded-full text-xs lg:text-base hover:text-black transition-transform hover:scale-110"
            href="mailto:stevensalazsr@gmail.com"
            ><Mail>stevensalazsr@gmail.com</Mail>
          </a>
        </nav>
      </h1>

      <section id="proyectos" class="mx-auto py-10 w-full lg:w-[740px]">
        <h2
          class="flex items-center gap-x-2 opacity-80 mb-6 font-semibold text-2xl text-white"
        >
          <Code class="size-12" /> Proyectos
        </h2>
        <Projects />
      </section>

      <section id="experiencia" class="mx-auto py-10 w-full lg:w-[740px]">
        <h2
          class="flex items-center gap-x-2 opacity-80 mb-6 font-semibold text-2xl text-white"
        >
          <Case class="size-12" /> Experiencia
        </h2>
        <Experience />
      </section>

      <section id="tecnologias" class="mx-auto py-10 w-full lg:w-[740px]">
        <h2
          class="flex items-center gap-x-2 opacity-80 mb-6 font-semibold text-2xl text-white"
        >
          <Tools class="size-12" /> Tecnologias
        </h2>
        <Skills />
      </section>
    </section>
    <Footer />
  </main>
</Layout>
